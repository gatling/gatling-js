{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "target",
    "lib": ["es2021", "dom"],
    "target": "es2021",
    "module": "node16",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts"]
}